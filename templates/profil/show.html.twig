{% extends 'base.html.twig' %}


{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>User</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Pseudo</th>
                            <td>{{ user.pseudo }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <a href="{{ path('app_profil_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
{% endblock %}
